{% extends "template.html.j2" %}

{% block body %}

<div class="row align-items-center" style="padding-top:100px">
  <div class="col-12">
    <h1>UCI ICS Search Engine</h1>
    <p>This search engine utilizes <strong>ranked retrieval</strong>.</p>
  </div>

  <div class="col-12">
    <form action="/create" method="post">
      <div class="form-group">
        <label for="query">Search</label>
        <input class="form-control" type="text" name="query" id="query" placeholder="Search Text">
      </div>

      <div class="form-group">
        <button class="btn btn-lg btn-success" type="submit">Submit Search</button>
      </div>

    </form>
  </div>
</div>

{% endblock %}