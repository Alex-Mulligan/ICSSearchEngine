{% extends "template.html.j2" %}

{% block body %}

<div class="row" style="padding-top:100px">
  <div class="col-12">
    <h1>UCI ICS Search Engine</h1>
  </div>

  <div class="col-12">
    <form action="/create" method="post">
      <div class="form-group">
        <label for="query">Search</label>
        <input class="form-control" type="text" name="query" id="query" placeholder="Search Text">
      </div>

      <div class="form-group">
        <button class="btn btn-lg btn-success" type="submit">Submit Search</button>
      </div>
    </form>
  </div>

  <div class="col-12">
    <h1>Search results for '{{query}}':</h1>
    <p>{{num_sites}} results found in {{query_time}} seconds</p>
    {% for site,title in sites %}
      <h3>{{site}}</h3>
      <h5>{{title}}</h5>
      <br>
    {% endfor %}
  </div>
</div>
{% endblock %}